{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist" /* Redirect output structure to the directory. */,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "~/*": [
        "src/*"
      ]
    },
    "rootDir": ".",
    "rootDirs": [
      "src",
    ],
    "skipLibCheck": true,
    "sourceMap": true,
    "module": "CommonJS",
    "target": "ES2018",
  },
  "exclude": [
    "node_modules",
    ".vite-storybook",
    "storybook-static",
    "dist",
    "__tests__",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "__tests__/*.tsx",
    "__tests__/*.ts",
  ],
}